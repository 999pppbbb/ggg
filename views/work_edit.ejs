<form method="post" action="/work/update" enctype="multipart/form-data">
    <input type="hidden" name="id" value=<%= result._id %>>
    <input type="text" name="writer" value=<%= result.writer %>>
    <input type="text" name="title" value=<%= result.title %>>
    <textarea id="content" name="content" rows="10" cols="80"><%= result.content %></textarea>
    <input type="file" name="addfile" /><br> 
    <% if(result.file) { %> 
     <input type="text" name="pre_addfile" value="<%= result.file.filename %>" /> 
    <br>file: <img src="/uploads/<%= result.file.filename %>" width="500">
     <% } %> 
    <input type="submit" value="update" name="" />
</form>
